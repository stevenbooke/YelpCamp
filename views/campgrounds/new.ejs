<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create a new Campsite</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Campsite" name="campSite">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="Price" name="price" min="0.00" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="ImageURL" name="imageURL">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Description" name="description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>

		
	</div>
</div>

<% include ../partials/footer%>